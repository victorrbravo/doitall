<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
                
        
    <ImageView
        android:id="@+id/imageGraph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button1"
        android:layout_gravity="center"        
         />
      <TextView android:id="@+id/graphTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:text=""
                android:gravity="center"
                android:textSize="18dip"
                android:textColor="#0b84aa"/>
    <View
                android:layout_width="fill_parent"
                android:layout_height="1.5dp"
                android:id="@+id/sepnovisible15"
                android:background="@android:color/darker_gray"/>

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal" >
    
           <ImageButton
                android:id="@+id/buttonPie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/piechart"
                android:onClick="onPieClick"
                 />
                      <ImageButton
                android:id="@+id/buttonBars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/barschart"
                android:onClick="onBarsClick"
                 />
           

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:paddingLeft="21dp"
        android:text="@string/close" />

    </LinearLayout>
               

  </LinearLayout>
</ScrollView>



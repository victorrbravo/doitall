                <action android:name="novo.apps.doitall.RegisterActivity" />                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>        
        
        <activity
            android:name="novo.apps.doitall.PrincipalActivity"
            android:label="@string/app_name"
